import sys

from shayfara import opts
from shayfara import utils
from shayfara import enc


def main():
    '''
    main
    '''
    args = opts.getopts()

    # only run if arguments are given
    if len(sys.argv) >= 2:
        try:
            # get password
            password = utils.get_password(args)
            # expand all files from command line
            files = utils.load_files(args)
            # process files (encryp/decrypt)
            ret = enc.crypt(args, password, files)
        except (KeyboardInterrupt, EOFError):
            sys.stdout.write('\nExited at user request\n')
            sys.exit(0)

        sys.exit(ret)

    # else print help
    else:
        opts.getopts(['help'])


if __name__ == '__main__':
    main()
